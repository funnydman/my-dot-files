# Mako notification daemon configuration
# Ported from dunst settings

# Display
max-visible=5
sort=-time
layer=overlay
anchor=top-right

# Appearance
font=Liberation Mono 8
width=300
height=100
margin=10
padding=8
border-size=1
border-radius=2
border-color=#aaaaaa
background-color=#285577
text-color=#ffffff
default-timeout=10000
ignore-timeout=0

# Behavior
on-button-left=dismiss
on-button-middle=invoke-default-action
on-button-right=dismiss-all

# Urgency-based styling
[urgency=low]
background-color=#222222
text-color=#888888

[urgency=normal]
background-color=#285577
text-color=#ffffff

[urgency=critical]
background-color=#900000
text-color=#ffffff
border-color=#ff0000
default-timeout=0
