# Oh, sddm does not call .xprofile, check /usr/share/sddm/scripts/Xsession
xset -b &
xset r rate 300 50 &	# Speed xrate up
unclutter &		# Remove mouse when idle
~/.config/scripts/init &
xrdb ~/.Xresources &    # Xresources colors/settings on startup

